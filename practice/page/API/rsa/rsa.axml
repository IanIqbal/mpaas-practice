<view class="page">
  <view class="page-section">
    <view class="page-section-title">input：</view>
    <view class="page-section-demo">
      <textarea value="{{inputValue}}" maxlength="500" onInput="onInput" />
    </view>

    <view class="page-section-title">output：</view>
    <view class="page-section-demo">
      <textarea value="{{outputValue}}" maxlength="500" />
    </view>

    <view class="page-section-btns">
      <view size="mini" onTap="onEncrypt">encryption</view>
      <view size="mini" onTap="onDecrypt">decrypt</view>
    </view>
  </view>
</view>
